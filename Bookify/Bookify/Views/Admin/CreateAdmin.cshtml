@model Bookify.Models.ViewModels.CreateAdminViewModel

@{
    ViewData["Title"] = "Create Admin Account";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Bookify</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        :root {
            --color-primary: #1E3A5F;
            --color-accent: #D4AF37;
            --color-gray-50: #F9FAFB;
            --color-gray-200: #E5E7EB;
            --color-gray-600: #4B5563;
            --radius-lg: 0.5rem;
            --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        }

        body {
            font-family: system-ui, -apple-system, sans-serif;
            background-color: var(--color-gray-50);
            margin: 0;
        }

        .admin-header {
            background: var(--color-primary);
            color: white;
            padding: 1.5rem 0;
            box-shadow: var(--shadow-md);
        }

        .form-container {
            max-width: 600px;
            margin: 3rem auto;
            background: white;
            padding: 2.5rem;
            border-radius: var(--radius-lg);
            box-shadow: var(--shadow-md);
        }

        .form-title {
            color: var(--color-primary);
            font-size: 1.75rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .form-subtitle {
            color: var(--color-gray-600);
            margin-bottom: 2rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            font-weight: 600;
            color: var(--color-primary);
            margin-bottom: 0.5rem;
            display: block;
        }

        .form-control {
            border: 2px solid var(--color-gray-200);
            border-radius: 0.5rem;
            padding: 0.75rem 1rem;
            font-size: 1rem;
            transition: all 0.2s;
        }

        .form-control:focus {
            border-color: var(--color-primary);
            box-shadow: 0 0 0 3px rgba(30, 58, 95, 0.1);
            outline: none;
        }

        .text-danger {
            color: #dc2626;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--color-primary) 0%, #2d4a6f 100%);
            border: none;
            color: white;
            padding: 0.875rem 2rem;
            border-radius: 0.5rem;
            font-weight: 600;
            font-size: 1rem;
            cursor: pointer;
            transition: all 0.3s;
            width: 100%;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 16px rgba(30, 58, 95, 0.3);
        }

        .btn-secondary {
            background: white;
            border: 2px solid var(--color-gray-200);
            color: var(--color-gray-600);
            padding: 0.875rem 2rem;
            border-radius: 0.5rem;
            font-weight: 600;
            font-size: 1rem;
            cursor: pointer;
            transition: all 0.2s;
            text-decoration: none;
            display: inline-block;
            text-align: center;
        }

        .btn-secondary:hover {
            border-color: var(--color-primary);
            color: var(--color-primary);
        }

        .button-group {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
            margin-top: 2rem;
        }

        .alert {
            padding: 1rem 1.25rem;
            border-radius: 0.5rem;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .alert-danger {
            background: #fee2e2;
            border: 1px solid #fecaca;
            color: #991b1b;
        }

        .password-requirements {
            background: #f0f9ff;
            border: 1px solid #bae6fd;
            border-radius: 0.5rem;
            padding: 1rem;
            margin-top: 0.5rem;
            font-size: 0.875rem;
            color: #0c4a6e;
        }

        .password-requirements ul {
            margin: 0.5rem 0 0 0;
            padding-left: 1.5rem;
        }

        .password-requirements li {
            margin-bottom: 0.25rem;
        }

        .icon-wrapper {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, var(--color-accent) 0%, #c9a227 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.25rem;
        }
    </style>
</head>

<body>
    <div class="admin-header">
        <div class="container">
            <div style="display: flex; justify-content: space-between; align-items: center;">
                <a asp-controller="Admin" asp-action="Index" style="color: white; text-decoration: none; font-size: 1.5rem; font-weight: bold;">
                    <span>Bookify Admin</span>
                </a>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="form-container">
            <div class="form-title">
                <div class="icon-wrapper">
                    <i class="fas fa-user-shield"></i>
                </div>
                <span>Create New Admin Account</span>
            </div>
            <p class="form-subtitle">Add a new administrator to manage the Bookify platform</p>

            @if (!ViewData.ModelState.IsValid)
            {
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-circle"></i>
                        <div>
                            <strong>Please correct the following errors:</strong>
                            <ul style="margin: 0.5rem 0 0 0; padding-left: 1.5rem;">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                        <li>@error.ErrorMessage</li>
                            }
                            </ul>
                        </div>
                    </div>
            }

            <form asp-action="CreateAdmin" method="post">
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label asp-for="FullName" class="form-label">
                        <i class="fas fa-user"></i> Full Name
                    </label>
                    <input asp-for="FullName" class="form-control" placeholder="Enter full name" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="form-label">
                        <i class="fas fa-envelope"></i> Email Address
                    </label>
                    <input asp-for="Email" class="form-control" type="email" placeholder="admin@bookify.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="form-label">
                        <i class="fas fa-lock"></i> Password
                    </label>
                    <input asp-for="Password" class="form-control" type="password" placeholder="Enter secure password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <div class="password-requirements">
                        <strong><i class="fas fa-info-circle"></i> Password Requirements:</strong>
                        <ul>
                            <li>Minimum 6 characters</li>
                            <li>At least one uppercase letter</li>
                            <li>At least one lowercase letter</li>
                            <li>At least one number</li>
                        </ul>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="form-label">
                        <i class="fas fa-lock"></i> Confirm Password
                    </label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Re-enter password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="button-group">
                    <a asp-controller="Admin" asp-action="Index" class="btn-secondary">
                        <i class="fas fa-arrow-left"></i> Cancel
                    </a>
                    <button type="submit" class="btn-primary">
                        <i class="fas fa-user-plus"></i> Create Admin Account
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
